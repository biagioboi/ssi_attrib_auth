{
  "manifest_version": 2,
  "name": "Demo",
  "version": "2.0",

  "icons": {
    "48": "icons/logo.png"
  },

  "permissions": [
    "webRequestBlocking",
    "webRequest",
    "activeTab",
    "<all_urls>",
    "storage",
    "tabs",
    "http://localhost*"
  ],
  "content_scripts": [ 

      { 

        "matches": [ "<all_urls>" ], 
        "js": [ "content_script.js" ], 
        "run_at": "document_start" 
      } 

    ],
    
     "background": { 

    "scripts": [ "background.js" ], 

    "persistent": true 
    }, 

  "browser_action": {
    "default_icon": "icons/logo.png",
    "default_title": "Demo",
    "default_popup": "popup/connetti.html"
  }
}
